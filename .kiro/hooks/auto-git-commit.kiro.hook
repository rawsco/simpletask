{
  "enabled": true,
  "name": "Auto Git Commit",
  "description": "Automatically commit changes to git when tasks are completed",
  "version": "1",
  "when": {
    "type": "postTaskExecution"
  },
  "then": {
    "type": "runCommand",
    "command": "git add . && git commit -m \"Auto-commit: Updated files\" || true"
  }
}